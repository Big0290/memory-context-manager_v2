# Environment Variables Template for Memory Context Manager v2
# Copy this file to .env and fill in your actual values

# Ollama Configuration
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_MODEL=phi3:mini
OLLAMA_HOST=0.0.0.0

# Memory Storage
MEMORY_STORAGE_DIR=/app/brain_memory_store
DEBUG_MODE=false

# Google Custom Search API Configuration
GOOGLE_CUSTOM_SEARCH_API_KEY=your_google_api_key_here
GOOGLE_CUSTOM_SEARCH_ENGINE_ID=your_custom_search_engine_id_here

# Bing Web Search API Configuration (optional)
BING_SEARCH_API_KEY=your_bing_api_key_here

# Search Engine Settings
ENABLE_GOOGLE_SEARCH=true
ENABLE_BING_SEARCH=false
SEARCH_RATE_LIMIT=100
MAX_RESULTS_PER_QUERY=50

# WebUI Configuration
WEBUI_SECRET_KEY=your_webui_secret_key_here
