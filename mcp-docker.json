{
  "mcpServers": {
    "memory-brain-docker": {
      "command": "docker",
      "args": [
        "exec", 
        "-i", 
        "memory_mcp_server", 
        "uv", 
        "run", 
        "python", 
        "main.py"
      ],
      "env": {
        "OLLAMA_MODEL": "phi3:mini",
        "OLLAMA_BASE_URL": "http://ollama:11434",
        "DEBUG_MODE": "false"
      }
    }
  }
}