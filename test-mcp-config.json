{
  "mcpServers": {
    "memory-context-manager-v2": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-v",
        "${workspaceFolder}:/workspace",
        "-w",
        "/workspace",
        "memory-context-manager-v2:latest"
      ],
      "env": {
        "PYTHONPATH": "/workspace",
        "MCP_LOG_LEVEL": "INFO",
        "OLLAMA_BASE_URL": "http://host.docker.internal:11434"
      }
    }
  }
}
